{
  "name": "doc-convert",
  "description": "Convert between document formats using LibreOffice",
  "author": "uniconv",
  "license": "MIT",
  "repository": "https://github.com/uniconv/plugins",
  "keywords": [
    "document",
    "pdf",
    "docx",
    "odt",
    "xlsx",
    "pptx",
    "libreoffice",
    "conversion"
  ],
  "releases": [
    {
      "version": "1.0.2",
      "uniconv_compat": ">=0.1.0",
      "interface": "cli",
      "dependencies": [
        {
          "name": "python3",
          "type": "system",
          "version": ">=3.8",
          "install_hint": "brew install python3 (macOS) or apt install python3 (Linux)"
        },
        {
          "name": "libreoffice",
          "type": "system",
          "check": "command -v libreoffice || command -v soffice",
          "install_hint": "brew install --cask libreoffice (macOS) or apt install libreoffice (Linux)"
        },
        {
          "name": "pandoc",
          "type": "system",
          "check": "command -v pandoc",
          "optional": true,
          "description": "Required for Markdown conversion",
          "install_hint": "brew install pandoc (macOS) or apt install pandoc (Linux)"
        }
      ],
      "artifact": {
